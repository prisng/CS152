  // generic compose combinator
  
  /*
  def compose[T](f: T => T, g: T => T): T => T = {
		def r(x: T):
			T = f(g(x));
   	r _
	}
	*/
	
	def compose[A, B](f: A => B, g: B => A): B => B = {
		def r(x: B):
			B = f(g(x));
   	r _
	}
	def triple(x: Int): Int = 3 * x
	
	def square(x: Int) = x * x
	
	println(compose(triple _, square _))
	
  
